<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <i class="fas fa-user-cog"></i>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book', class:'btn btn-success' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <% @books.each do |book| %>
      <div>
        <%= link_to book_path(book.id) do %>
          <%= image_tag book.get_image %>
        <% end %>
    
        <p><%= image_tag book.user.get_profile_image(100,100) %></p>
        <p><%= book.title %></p>
        <p><%= book.body %></p>
      </div>
    <% end %>
    </div>
  </div>
</div>
</main>